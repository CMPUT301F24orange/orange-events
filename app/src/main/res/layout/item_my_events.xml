<?xml version="1.0" encoding="utf-8"?>
<!-- @author Radhe Patel -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Event Poster Image -->
        <ImageView
            android:id="@+id/event_poster"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Event Poster" />

        <!-- Event Details Background -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E0E0E0"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/event_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Date Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paddingEnd="4dp" />

                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/00 - 00/00/00"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Lottery Day and Sampled Status Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Lottery Day Label and Value -->
                <TextView
                    android:id="@+id/lottery_day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lottery Day:"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paddingEnd="4dp" />

                <TextView
                    android:id="@+id/lottery_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/00"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <!-- Sampled Status Label and Value -->
                <TextView
                    android:id="@+id/sampled_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sampled:"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paddingEnd="4dp" />

                <TextView
                    android:id="@+id/sampled_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes/No"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
