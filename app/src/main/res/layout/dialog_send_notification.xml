<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for Send Notification Dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/send_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Event Title (Read-only) -->
    <TextView
        android:id="@+id/notification_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event: "
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Notification Message Input -->
    <EditText
        android:id="@+id/notification_message_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter notification message"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
         />

</LinearLayout>
